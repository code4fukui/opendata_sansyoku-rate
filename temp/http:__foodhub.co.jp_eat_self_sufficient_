<script>
$(function() {
  var $archiveWrapper = $(".list-self_sufficient-archive");
  $(".js-ajax-more").on("click", function() {
    var $moreBtn = $(this);
    $moreBtn.addClass("is-loading");
    $.ajax({
      url: $moreBtn.attr("href")
    }).done(function(data) {
      var $data = $(data);
      $archiveWrapper.append($data.children("li"));
      if($data.find(".btn-more").length > 0)
        $moreBtn.attr("href", $data.find(".btn-more").attr("href"));
      else
        $moreBtn.parent().remove();
    }).fail(function(data, textStatus, errorThrown) {
      alert("ページの読み込みに失敗しました");
      console.error(errorThrown.message);
    }).always(function() {
      $moreBtn.removeClass("is-loading");
    });
    return false;
  });
});
</script>
    </main><!-- /contents-main -->
